@using ProjectSEM3.EF
@model ProjectSEM3.EF.Content
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listCategory= ViewBag.listCategory;
}
<section id="content">
    <div class="container top">
        <div class="row">
            <div class="span9">
                <div class="post-preview">
                    <h3>@Model.Name</h3>
                    <div class="image"><img src="@Model.Image" style="width:733px; height:301px;" alt=""></div>
                    <div class="post-meta"> <span class="meta-date"><i class="icon-clock-alt"></i>@Model.CreateDate.ToString("yyyy-MM-dd")</span> <span class="meta-author"><i class="icon-user-2"></i><a href="#">@Model.CreateBy</a></span> <span class="meta-tags"><i class="icon-tag-1"></i><a href="#">Web Design</a></span> <span class="meta-comment"><i class="icon-chat-1"></i><a href="#">12 comments</a></span> <span class="meta-views"><i class="icon-cog-1"></i><a href="#">@Model.ViewCount Lượt xem</a></span> </div>
                    <p>@Model.Description </p>

                    @Html.Raw(Model.Detail)

                 
                    <div class="post-navigation">
                        <div class="pull-left"><i class="icon-left-open"></i>&nbsp;<a href="#">Bài trước</a></div>
                        <div class="pull-right"><a href="#">Bài tiếp</a>&nbsp;<i class="icon-right-open"></i></div>
                    </div>
                    <div class="line"></div>
                    <h3>Bình luận</h3>
                    <div class="comments">
                        <div class="fb-comments" data-href="http://hightech.com/bai-viet/@Model.MetaTitle-@Model.ID" data-width="100%" data-numposts="5"></div>
                    </div>
                </div>
            </div>
            <div class="span3">
                <div class="block">
                    <div class="block-title">DANH MỤC</div>
                    <div class="block-content">
                        @{Html.RenderAction("CategoryContent","Content");}
                    </div>
                </div>
               
               
            </div>
        </div>
    </div>
</section>

