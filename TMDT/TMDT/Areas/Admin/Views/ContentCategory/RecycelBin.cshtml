@model PagedList.IPagedList<ProjectSEM3.EF.ContentCategory>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Script{
    <script src="~/Assets/Admin/ContentCateoryController.js"></script>
    <script src="~/Assets/Admin/ContentCateoryController.js"></script>
}
<div class="x_content">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">


            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Xóa tạm</h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_length" id="datatable-checkbox_length">

                                        
                                        <a href="/Admin/ContentCategory" class="btn btn-default">
                                            <img src="~/Assets/Admin/images/Arrow-prevoius-2-icon.png" width="30px" height="30px" />
                                        </a>
                                        <a href="" class="btn btn-default" id="btn-remove-deleteAll">
                                            <img src="~/Assets/Admin/images/gtk_undelete.png" width="30px" height="30px" />
                                        </a>
                                        <a href="" class="btn btn-default" id="btn-remove-deleteAll-db">
                                            <img src="~/Assets/Admin/images/deletered.png" width="30px" height="30px" />
                                        </a>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title_right">
                                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                            @using (Html.BeginForm("Index", "ContentCategory"))
                                            {
                                                <div class="input-group">
                                                    <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Tìm kiếm...">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-default" type="submit" style="color: black"><span class="glyphicon glyphicon-search"></span></button>
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="datatable-checkbox" class="table table-striped table-bordered table-hover" role="grid">
                                        <thead>
                                            <tr role="row" class="">
                                                <th>
                                                    <input type="checkbox" id="checkAll">
                                                    <label for="checkAll"></label>
                                                </th>
                                                <th>ID</th>
                                                <th>Tên</th>
                                                <th>Ngày tạo</th>
                                                <th>#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" id="row_@item.ID" class="odd">
                                                    <td>
                                                        <input type="checkbox" value="@item.ID" name="table_records" id="@item.ID" class="checkbox">
                                                        <label for="@item.ID"></label>
                                                    </td>
                                                    <td>@item.ID</td>
                                                    <td>@item.Name</td>
                                                    <td>
                                                        @item.CreateDate
                                                    </td>
                                                    <td>
                                                        <div class="">
                                                            <a href="#" data-toggle="tooltip" title="Hủy xóa tạm" class="btn btn-default btn-sm btn-remove-delete-contentCaegory  " data-id="@item.ID">
                                                                <img src="~/Assets/Admin/images/undelete.png" width="16px" height="16px" />
                                                            </a>
                                                            <a href="#" data-toggle="tooltip" title="Xóa" class="btn btn-default btn-sm btn-remove-delete-db" data-id="@item.ID">
                                                                <img src="~/Assets/Admin/images/Delete.png" width="16px" height="16px" />
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                          
                            <div class="row">
                                <div class="col-sm-12">
                                    <div>
                                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
